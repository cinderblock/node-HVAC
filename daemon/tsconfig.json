{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2018"],
    "outDir": "build",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "node_modules/*", "node_modules/@types/*"]
    }
  }
}
